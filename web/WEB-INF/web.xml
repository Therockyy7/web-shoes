<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee     http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>controller.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowInfoProductServlet</servlet-name>
        <servlet-class>controller.ShowInfoProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllServlet</servlet-name>
        <servlet-class>controller.AllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowInfoProductServlet</servlet-name>
        <url-pattern>/ShowInfoProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllServlet</servlet-name>
        <url-pattern>/AllServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
